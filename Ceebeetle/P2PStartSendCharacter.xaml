<src:CCBChildWindow x:Class="Ceebeetle.P2PStartSendCharacter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:Ceebeetle"
        Title="Send Character" Height="300" Width="419">
    <Grid>
        <Label Content="Send to:" Height="26" HorizontalAlignment="Right" Margin="0,12,17,0" Name="label1" VerticalAlignment="Top" Width="154" />
        <ListBox Margin="0,44,11,77" Name="lbUsers" SelectionChanged="lbUsers_SelectionChanged" HorizontalAlignment="Right" Width="160" ToolTip="Who to send the character to" />

        <Button Content="_Send now" Height="24" HorizontalAlignment="Right" Margin="0,0,11,45" Name="btnSend" VerticalAlignment="Bottom" Width="160" Click="btnSend_Click" ToolTip="Send character now" />
        <Button Content="_Close" Height="24" HorizontalAlignment="Right" Margin="0,0,11,15" Name="btnClose" VerticalAlignment="Bottom" Width="160" Click="btnClose_Click" ToolTip="Cancel send and close window" />
        <Label Content="Character" Height="29" Margin="18,12,223,0" Name="label2" VerticalAlignment="Top" />
        <ListBox Margin="20,44,201,10" Name="lbCharacters" ToolTip="Character to send" SelectionChanged="lbCharacters_SelectionChanged" />
    </Grid>
</src:CCBChildWindow>
