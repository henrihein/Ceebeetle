<src:CCBChildWindow  x:Class="Ceebeetle.NamePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:Ceebeetle"
        Title="Pick a name" Height="369" Width="333">
    <Grid>
        <GroupBox Header="Name type" Height="112" HorizontalAlignment="Left" Name="grpNameTypes" VerticalAlignment="Top" Width="298">
            <Grid Height="108" Width="298">
                <RadioButton Content="Western Female" Height="21" HorizontalAlignment="Left" Margin="12,8,0,0" Name="rbWesternFemale" VerticalAlignment="Top" Width="134" />
                <RadioButton Content="Japanese Female" Height="21" HorizontalAlignment="Left" Margin="12,32,0,0" Name="rbJapaneseFemale" VerticalAlignment="Top" Width="134" />
                <RadioButton Content="Elven Female" Height="21" HorizontalAlignment="Left" Margin="12,56,0,0" Name="rbElvenFemale" VerticalAlignment="Top" Width="134" />
                <RadioButton Content="Western male" Height="21" HorizontalAlignment="Left" Margin="164,11,0,0" Name="rbWesternMale" VerticalAlignment="Top" Width="111" />
                <RadioButton Content="Japanese Male" Height="21" HorizontalAlignment="Left" Margin="164,32,0,0" Name="rbJapaneseMale" VerticalAlignment="Top" Width="111" />
                <RadioButton Content="Elven Male" Height="21" HorizontalAlignment="Left" Margin="164,56,0,0" Name="rbElvenMale" VerticalAlignment="Top" Width="111" />
            </Grid>
        </GroupBox>
        <Button Content="_Pick" Height="24" HorizontalAlignment="Left" Margin="12,143,0,0" Name="btnPick" VerticalAlignment="Top" Width="101" />
        <ListBox Height="129" HorizontalAlignment="Left" Margin="140,143,0,0" Name="lbPicked" VerticalAlignment="Top" Width="158" />
        <Button Content="Close" Height="28" HorizontalAlignment="Left" Margin="187,290,0,0" Name="btnClose" VerticalAlignment="Top" Width="111" />
        <Button Content="_Copy Name" Height="24" HorizontalAlignment="Left" Margin="18,248,0,0" Name="btnCopy" VerticalAlignment="Top" Width="95" />
    </Grid>
</src:CCBChildWindow>
