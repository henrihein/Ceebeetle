        <Button Content="Close" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="btnClose" VerticalAlignment="Bottom" Width="97" Click="btnClose_Click" />
    </Grid>
</src:CCBChildWindow>
