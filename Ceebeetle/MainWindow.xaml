<Window x:Class="Ceebeetle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Character Manager" Closing="MainWindow_Closing" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="438" Width="749">
    <Grid>
        <TextBlock Height="18" HorizontalAlignment="Left" Margin="12,369,0,0" Name="tbStatus" Text="Status" VerticalAlignment="Top" Width="703" DataContext="{Binding}" />
        <TabControl Height="351" HorizontalAlignment="Left" Margin="12,12,0,0" Name="tabControl1" VerticalAlignment="Top" Width="703">
            <TabItem Header="Characters" Name="ccTab">
                <Grid Height="324" Width="711">
                    <ListBox Height="231" HorizontalAlignment="Left" Margin="14,19,0,0" Name="lbCharacters" VerticalAlignment="Top" Width="357" SelectionMode="Multiple" />
                    <Button Content="Add Character..." Height="27" HorizontalAlignment="Left" Margin="14,285,0,0" Name="btnAddCharacter" VerticalAlignment="Top" Width="117" Click="btnAddCharacter_Click" />
                    <Button Content="Close" Height="32" HorizontalAlignment="Left" Margin="524,282,0,0" Name="btnClose" VerticalAlignment="Top" Width="167" Click="btnClose_Click" />
                    <Button Content="Enable Delete" Height="30" HorizontalAlignment="Left" Margin="178,283,0,0" Name="btnDelete" VerticalAlignment="Top" Width="193" Click="btnDelete_Click" />
                    <Button Content="Test..." Height="20" HorizontalAlignment="Left" Margin="472,56,0,0" Name="btnTest" VerticalAlignment="Top" Width="192" Click="btnTest_Click" />
                </Grid>
            </TabItem>
        </TabControl>
        <TextBlock Height="22" HorizontalAlignment="Left" Margin="193,1,0,0" Name="tbLastError" Text="" VerticalAlignment="Top" Width="535" />
    </Grid>
</Window>
