<src:CCBChildWindow x:Class="Ceebeetle.GameTemplatePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:Ceebeetle"
        Title="Game Templates" Height="394" Width="319">
    <Grid>
        <Label Content="Templates" Height="27" HorizontalAlignment="Left" Margin="12,0,0,0" Name="label1" VerticalAlignment="Top" Width="164" />
        <ListBox Height="135" Margin="12,33,22,0" Name="lbTemplates" VerticalAlignment="Top" SelectionChanged="lbTemplates_SelectionChanged" />
        <Label Content="Name:" Height="24" HorizontalAlignment="Left" Margin="12,180,0,0" Name="label2" VerticalAlignment="Top" Width="88" />
        <TextBox Height="24" Margin="106,182,22,0" Name="tbName" VerticalAlignment="Top" />
        <Button Content="Add Game based on template" Height="28" HorizontalAlignment="Left" Margin="12,0,0,92" Name="btnAddGame" VerticalAlignment="Bottom" Width="263" Click="btnAddGame_Click" />
        <Button Content="Add Template based on {0}" Height="28" HorizontalAlignment="Left" Margin="12,0,0,52" Name="btnAddTemplate" VerticalAlignment="Bottom" Width="263" Click="btnAddTemplate_Click" />
        <Button Content="Close" Height="28" HorizontalAlignment="Right" Margin="0,0,10,11" Name="btnClose" VerticalAlignment="Bottom" Width="122" Click="btnClose_Click" />
    </Grid>
</src:CCBChildWindow>
